// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                  Int     @default(autoincrement()) @id
  email               String  @unique
  name                String 
  password            String
  access_token        String?
  posts               Tracking[] 
  projectUser         ProjectUsers[]
  role                Role    @default(USER)
}

model Tracking {
  id                  Int      @default(autoincrement()) @id
  calendare           String
  discriptionTrack    String
  nextDayDiscription  String?
  tasks               Tasks[]
  author              User     @relation(fields: [authorId], references: [id])
  project             Project  @relation(fields: [projectName], references: [name])
  projectName         String
  authorId            Int
}

model Tasks {
  id                  Int      @default(autoincrement()) @id
  name                String
  discriptionTask     String
  time                String?
  isComplite          String
  task_user           Tracking    @relation(fields: [taskUser], references: [id])
  taskUser            Int
}

model Project {
  id                  Int   @default(autoincrement()) @id
  name                String  @unique
  tracking            Tracking[]
  users               ProjectUsers[]
}

model ProjectUsers {
  projectName         String    @unique
  project             Project @relation(fields: [projectName], references: [name])
  userId              Int
  user                User @relation(fields: [userId], references: [id])
}
