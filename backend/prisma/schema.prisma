// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                  Int     @default(autoincrement()) @id
  email               String  @unique
  name                String 
  password            String
  access_token        String?
  posts               Tracking[]
  role                Role  @default(USER)
}

model Tracking {
  id                  Int      @default(autoincrement()) @id
  calendare           DateTime
  discription         String
  gitSourse           String
  nextDayDiscription  String?
  reworked            String?
  target              String
  workTime            String
  author              User     @relation(fields: [authorId], references: [id])
  authorId            Int

}
